@model IEnumerable<CouponViewModel>

@{ }

<br />
<br />

<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Coupons List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Discount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.MinimumAmount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.isActive)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Discount
                </td>
                <td>
                    @item.MinimumAmount
                </td>
                <td>
                    @item.isActive
                </td>
                <td>
                    <partial name="_TableButtonPartial" model="item.Id" />
                </td>
            </tr>
                }
            </table>
        }
        else
        {
            <p>No coupon exists...</p>
        }
    </div>
</div>